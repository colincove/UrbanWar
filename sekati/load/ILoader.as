uest() : URLRequest;			/**		 * Set loader <code>URLRequest</code>.		 */ 		function set request(r : URLRequest) : void;		/**		 * The loader url.		 */ 		function get url() : String;		/**		 * Set loader url.		 */ 		function set url(s : String) : void;		/**		 * The <i>loosely-typed</i> <code>AbstractLoader</code> content.		 */		function get rawContent() : *;				/**		 * The loading status of the loader; if <code>true</code> the loader is loading, if <code>false</code> the loader has not started yet.		 */		function get loading() : Boolean;		/**		 * The ready status of the loader content; if <code>true</code> the content is loaded, if <code>false</code> the content is not loaded.		 */		function get ready() : Boolean;				//function get content() : *;	}}