package com.items {	import com.globals;	import com.interfaces.Program;	import flash.display.MovieClip;	import com.globalFunctions;	public class FallingItem extends Item implements Program	{private var fallSpeed:int;		public function FallingItem(radius:int, actionClip:MovieClip)		{			// constructor code			super(radius, actionClip);			fallSpeed=globals.gameVars.fuelVars.fallSpeed;			globals.game_progThread.addProg(this);			progRun=true;					}override public function update():Object{	super.update();						y+=fallSpeed;			if (parent!=null)			{				if (globals.groundContainer.hitTestPoint(globalFunctions.getMainX(this),globalFunctions.getMainY(this)+50,true)) {					fallSpeed=0;				}			}			return this;		}	}	}